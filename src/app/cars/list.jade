h1(hidden) Rent cars for rideshare

.listing-filters
  button.clear-button(ng-click="setCostBucket('$')", ng-class="{active: costBucket == '$'}") $
  button.clear-button(ng-click="setCostBucket('$$')", ng-class="{active: costBucket == '$$'}") $$
  button.clear-button(ng-click="setCostBucket('$$$')", ng-class="{active: costBucket == '$$$'}") $$$

  .cost-label(ng-switch="costBucket")
    span(ng-switch-when="$") #[span.tiny up to] $50 #[span.tiny a day]
    span(ng-switch-when="$$") $50 - $80 #[span.tiny a day]
    span(ng-switch-when="$$$") $80+ #[span.tiny a day]
    span(ng-switch-default) PRICE RANGE


.listing-wrapper(save-scroll)

  a.car(ng-repeat="car in cars | filter: costBucket && {cost_bucket: costBucket}", ui-sref=".detail({carId: car.id, car: car})")
    car-image
    .info
      h3 {{car.name}}
      p {{car.listing_features}}

a(ui-sref="carsShow({carId: car.id, car: car})") cancel
h2 Request for {{car.year}} {{car.make}} {{car.model}}

form(name='bookingForm', ng-submit='createBooking(user_account)')

  div
    label(for='first_name') First Name
    input(id='first_name', ng-model='user_account.first_name')

  div
    label(for='last_name') Last Name
    input(id='last_name', ng-model='user_account.last_name')

  div
    label(for='email') Email Address
    input(type='email', name='email', id='email', ng-model='user_account.email', ng-blur="bookingForm.email.$invalid && showAlert('enter a valid email')")

  div
    label(for='phone') Phone Number
    input(id='phone', ng-model='user_account.phone')

  input(type='submit')
